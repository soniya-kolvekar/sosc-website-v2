---
import Layout from "@/layouts/Layout.astro";
import MarkdownLayout from "@/layouts/MarkdownLayout.astro";
import { Image } from "astro:assets";
import { getCollection, render } from "astro:content";
import slugify from "slugify";
import { Icon } from "astro-icon/components";

export async function getStaticPaths() {
  const blogs = await getCollection("blogs");
  return blogs.map((blog) => ({
    params: { slug: slugify(blog.data.title, { lower: true, strict: true }) },
    props: { blog },
  }));
}

const { blog } = Astro.props;
const { Content } = await render(blog);
const { title, date, author, cover, tags } = blog.data;

const formattedDate = new Date(date).toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<Layout>
  <main class="mx-auto max-w-4xl px-4 py-20 md:px-8">
    <!-- Top Back Button -->
    <div class="mb-8">
      <a
        href="/blogs"
        class="group hover:text-primary inline-flex items-center gap-2 text-sm font-bold tracking-wider text-gray-500 uppercase transition-colors"
      >
        <Icon
          name="mdi:chevron-left"
          class="h-4 w-4 transition-transform group-hover:-translate-x-1"
        />
        Back to all blogs
      </a>
    </div>

    <!-- Blog Header (Reference Style) -->
    <div class="mb-10 border-b border-gray-100 pb-10">
      <div class="mb-6 flex items-center gap-4">
        <img
          src={`https://github.com/${author}.png`}
          alt={author}
          class="h-16 w-16 rounded-full border border-gray-100 bg-gray-50"
          loading="eager"
          decoding="async"
          onerror="this.onerror=null; this.src='/github_avatar.svg';"
        />
        <div class="flex flex-col">
          <a
            href={`https://github.com/${author}`}
            target="_blank"
            class="hover:text-primary text-lg font-bold text-gray-900 transition-colors"
          >
            {author}
          </a>
          <span class="text-xs text-gray-400 italic">Contributor & Member</span>
        </div>
        <div class="ml-auto text-xs font-medium text-gray-400">
          <span>{formattedDate}</span>
          <span class="mx-2">in</span>
          <span
            class="decoration-primary/30 hover:text-primary underline underline-offset-2 transition-colors"
          >
            {tags}
          </span>
        </div>
      </div>

      <h1 class="text-4xl leading-tight font-black text-gray-900 md:text-6xl">
        {title}
      </h1>
    </div>

    <!-- Blog Cover -->
    {
      cover && (
        <div class="mb-12 overflow-hidden bg-gray-50">
          <Image
            src={cover}
            alt={title}
            class="h-auto w-full object-cover"
            loading="eager"
            format="webp"
            quality={80}
          />
        </div>
      )
    }

    <!-- Content -->
    <MarkdownLayout>
      <div class="prose-blog">
        <Content />
      </div>
    </MarkdownLayout>

    <!-- Back to Blogs Link -->
    <div class="mt-16 border-t border-gray-200 pt-8">
      <a
        href="/blogs"
        class="group hover:text-primary inline-flex items-center gap-2 text-sm font-bold tracking-wider text-gray-500 uppercase transition-colors"
      >
        <Icon
          name="mdi:chevron-left"
          class="h-4 w-4 transition-transform group-hover:-translate-x-1"
        />
        Back to all blogs
      </a>
    </div>
  </main>
</Layout>

<style>
  /* Blog Prose Styling */
  .prose-blog {
    color: #4b5563;
    font-size: 1.125rem;
    line-height: 1.8;
  }

  .prose-blog :global(h2) {
    font-size: 1.875rem;
    font-weight: 900;
    text-transform: uppercase;
    color: #111827;
    margin-top: 4rem;
    margin-bottom: 1.5rem;
    border-left: 4px solid #3ce56e; /* primary color */
    padding-left: 1.5rem;
    line-height: 1;
  }

  .prose-blog :global(h3) {
    font-size: 1.5rem;
    font-weight: 800;
    color: #111827;
    margin-top: 3rem;
    margin-bottom: 1rem;
  }

  .prose-blog :global(p) {
    margin-bottom: 1.5rem;
  }

  .prose-blog :global(img) {
    margin: 3rem 0;
    border: 1px solid #f3f4f6;
  }

  .prose-blog :global(pre) {
    background: #111827 !important;
    padding: 2rem !important;
    margin: 2.5rem 0 !important;
    border-radius: 0 !important;
    font-size: 0.875rem !important;
  }

  /* Hide duplicate H1 */
  :global(.prose > h1:first-child) {
    display: none;
  }

  /* Utility for vertical text */
  [writing-mode="vertical-lr"] {
    writing-mode: vertical-lr;
  }
</style>
