    margin-bottom: 0.5rem;
  }

  :global(.prose h3) {
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }

  :global(.prose h4) {
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }

  :global(.prose h5) {
    margin-top: 1.25rem;
    margin-bottom: 0.5rem;
  }

  :global(.prose h6) {
    margin-top: 1.25rem;
    margin-bottom: 0.5rem;
  }

  :global(.prose p) {
    margin-top: 0.5rem;
    margin-bottom: 0.75rem;
  }

  :global(.prose hr) {
    margin-top: 0.5rem;
    margin-bottom: 0.5rem;
  }
</style>
