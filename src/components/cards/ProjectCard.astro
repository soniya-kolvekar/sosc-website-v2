---
import { Image } from "astro:assets";

interface Props {
  title: string;
  description: string;
  cover?: ImageMetadata;
  techStack: string[];
  maintainers: string[];
  status: "active" | "maintained" | "archived" | "completed" | "in-progress";
  tags?: string[];
  link: string;
}

const {
  title,
  description,
  cover,
  techStack,
  maintainers,
  status,
  tags = [],
  link,
} = Astro.props;

const statusColors: Record<string, string> = {
  active:
    "bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-400",
  maintained:
    "bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-400",
  archived: "bg-gray-100 text-gray-800 dark:bg-gray-900/30 dark:text-gray-400",
  completed:
    "bg-yellow-100 text-yellow-800 dark:bg-yellow-900/30 dark:text-yellow-400",
  "in-progress":
    "bg-orange-100 text-orange-800 dark:bg-orange-900/30 dark:text-orange-400",
};
---

<a
  class={`bg-card group overflow-hidden cursor-pointer transition flex flex-col`}
  href={`/projects/${link}`}
>
  <!-- Cover Image with Title Overlay -->
  <div class="bg-muted relative h-48 overflow-hidden lg:h-56">
    {
      cover ? (
        <Image
          src={cover}
          alt={title}
          class="h-full w-full object-cover"
          width={1280}
          height={720}
          format="webp"
          loading="lazy"
          quality={80}
        />
      ) : (
        <div class="from-primary/10 to-primary/5 flex h-full w-full items-center justify-center bg-gradient-to-br">
          <span class="text-primary/60 px-4 text-center text-2xl font-semibold">
            {title}
          </span>
        </div>
      )
    }
    <!-- Status Badge -->
    <span
      class={`absolute bottom-3 right-3 px-2 py-0 text-xs font-medium rounded-sm ${statusColors[status]}`}
    >
      {status}
    </span>
  </div>

  <!-- Content -->
  <div class="flex flex-1 flex-col space-y-3 py-4 pr-0 pl-0">
    <div class="flex items-center justify-between">
      <h3 class={`font-semibold transition-colors group-hover:text-primary`}>
        {title}
      </h3>
      <div class="flex -space-x-2">
        {
          maintainers
            .slice(0, 3)
            .map((maintainer) => (
              <img
                src={`https://github.com/${maintainer}.png`}
                alt={maintainer}
                class="border-card h-6 w-6 rounded-full border-2"
                loading="lazy"
                decoding="async"
                onerror="this.onerror=null; this.src='/github_avatar.svg';"
              />
            ))
        }
        {
          maintainers.length > 3 && (
            <span class="border-card bg-muted text-muted-foreground flex h-6 w-6 items-center justify-center rounded-sm border-2 text-[10px]">
              +{maintainers.length - 3}
            </span>
          )
        }
      </div>
    </div>

    <!-- Tags -->
    <div class="flex flex-wrap gap-1">
      {
        [...techStack.slice(0, 4), ...(tags?.slice(0, 3) || [])].map((tag) => (
          <span class="bg-muted text-muted-foreground rounded px-1.5 py-0.5 text-[10px]">
            {tag}
          </span>
        ))
      }
      {
        techStack.length + (tags?.length || 0) > 7 && (
          <span class="bg-muted text-muted-foreground rounded px-1.5 py-0.5 text-[10px]">
            +{techStack.length + (tags?.length || 0) - 7}
          </span>
        )
      }
    </div>

    <!-- Description -->
    <p class={`text-muted-foreground flex-1`}>
      {description}
    </p>
  </div>
</a>
