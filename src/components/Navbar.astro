---
import { Menu, X } from "lucide-react";
import { Image } from "astro:assets";
import SOSC from "@/assets/sosc_logo.svg";
---

<nav class="text-foreground fixed top-0 z-99 w-full" id="main-navbar">
  <div class="flex h-14 w-full items-center justify-between px-4 md:px-8">
    <div
      class="relative z-50 text-xl font-bold transition-opacity duration-300"
      id="nav-logo"
    >
      <a href="/" aria-label="Go to home">
        <Image src={SOSC} alt="SOSC Logo" class="h-6 w-fit" loading="eager" />
      </a>
    </div>
    <!-- Fixed Toggle Button -->
    <button
      id="menu-toggle"
      class="relative z-100 cursor-pointer"
      aria-label="Toggle menu"
    >
      <Menu
        id="menu-icon"
        className="block h-6 w-6 transition-transform duration-300"
      />
      <X
        id="close-icon"
        className="hidden h-6 w-6 text-white transition-transform duration-300"
      />
    </button>
  </div>

  <!-- ========================================= -->
  <!-- DESKTOP MENU (Existing Embla Implementation) -->
  <!-- ========================================= -->
  <div id="desktop-menu" class="fullpage-menu hidden md:flex">
    <div class="menu-background"></div>

    <!-- Top Section -->
    <div class="menu-top">
      <div class="tech-text">
        <span class="tech-label">OPEN SOURCE</span>
        <span class="tech-separator">/</span>
        <span class="tech-label">INNOVATION</span>
        <span class="tech-separator">/</span>
        <span class="tech-label">COLLABORATION</span>
      </div>
    </div>

    <!-- Pagination Row -->
    <div class="menu-pagination">
      <div class="pagination-container" id="pagination-list">
        {
          ["HOME", "BLOGS", "EVENTS", "PROJECTS", "RESOURCES", "TEAM"].map(
            (item, index) => (
              <button class="pagination-item" data-index={index}>
                {item}
              </button>
            ),
          )
        }
      </div>
    </div>

    <!-- Middle Section: Desktop Horizontal Infinite Scroll -->
    <div class="menu-middle">
      <div class="embla" id="embla-node">
        <div class="embla__container">
          <div class="embla__slide">
            <a href="/" class="horizontal-link" data-path="/">
              <span class="link-number">01</span>
              <span class="link-text">HOME</span>
            </a>
          </div>
          <div class="embla__slide">
            <a href="/blogs" class="horizontal-link" data-path="/blogs">
              <span class="link-number">02</span>
              <span class="link-text">BLOGS</span>
            </a>
          </div>
          <div class="embla__slide">
            <a href="/events" class="horizontal-link" data-path="/events">
              <span class="link-number">03</span>
              <span class="link-text">EVENTS</span>
            </a>
          </div>
          <div class="embla__slide">
            <a href="/projects" class="horizontal-link" data-path="/projects">
              <span class="link-number">04</span>
              <span class="link-text">PROJECTS</span>
            </a>
          </div>
          <div class="embla__slide">
            <a href="/resources" class="horizontal-link" data-path="/resources">
              <span class="link-number">05</span>
              <span class="link-text">RESOURCES</span>
            </a>
          </div>
          <div class="embla__slide">
            <a href="/team" class="horizontal-link" data-path="/team">
              <span class="link-number">06</span>
              <span class="link-text">TEAM</span>
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom Section -->
    <div class="menu-bottom">
      <p class="ideals-text text-justify font-mono">
        At Sahyadri Open-Source Community, we believe in breeding innovation
        through collaboration, empowering students with cutting-edge technology,
        and building a vibrant ecosystem where ideas transform into impactful
        solutions. We champion open-source principles, encourage knowledge
        sharing, and create opportunities for growth through workshops,
        hackathons, and community-driven projects.
      </p>
    </div>
  </div>

  <!-- ========================================= -->
  <!-- MOBILE MENU (New Design) -->
  <!-- ========================================= -->
  <div id="mobile-menu" class="mobile-menu-overlay md:hidden">
    <!-- Close button logic is handled by the fixed toggle button z-index -->
    <div class="mobile-content-container">
      {
        [
          { name: "Home", path: "/" },
          { name: "Blogs", path: "/blogs" },
          { name: "Events", path: "/events" },
          { name: "Projects", path: "/projects" },
          { name: "Resources", path: "/resources" },
          { name: "Team", path: "/team" },
        ].map((item, index) => (
          <a
            href={item.path}
            class="mobile-link"
            style={`--delay: ${index * 50}ms`}
          >
            {item.name}
          </a>
        ))
      }
    </div>
  </div>
</nav>

<style>
  /* ========================================= */
  /* DESKTOP / SHARED STYLES */
  /* ========================================= */
  .fullpage-menu {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: rgba(0, 0, 0, 0.98);
    backdrop-filter: blur(10px);
    transform: translateY(-100%);
    pointer-events: none;
    transition: transform 0.8s cubic-bezier(0.77, 0, 0.175, 1);
    z-index: 60;
    overflow: hidden;
    flex-direction: column;
  }

  .fullpage-menu.active {
    transform: translateY(0);
    pointer-events: auto;
  }

  .menu-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: url("/navbar-bg.png");
    background-size: cover;
    background-position: center;
    filter: grayscale(100%) contrast(1.2);
    opacity: 0.15;
    z-index: 0;
  }

  /* Desktop Top */
  .menu-top {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding: 3rem 3rem 1.5rem;
    position: relative;
    z-index: 10;
    opacity: 0;
    transform: translateY(-20px);
    transition: all 0.6s cubic-bezier(0.77, 0, 0.175, 1);
  }

  .fullpage-menu.active .menu-top {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 0.1s;
  }

  .tech-text {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
  }

  .tech-label {
    font-size: clamp(0.7rem, 1.2vw, 0.9rem);
    font-weight: 500;
    letter-spacing: 0.15em;
    color: rgba(255, 255, 255, 0.6);
    text-transform: uppercase;
  }

  .tech-separator {
    color: rgba(255, 255, 255, 0.3);
    font-size: 0.8rem;
  }

  /* Pagination */
  .menu-pagination {
    position: relative;
    z-index: 20;
    width: 100%;
    padding: 0 3rem;
    display: flex;
    justify-content: center;
    margin-bottom: 1rem;
    opacity: 0;
    transition: opacity 0.6s ease;
  }

  .fullpage-menu.active .menu-pagination {
    opacity: 1;
    transition-delay: 0.2s;
  }

  .pagination-container {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    overflow-x: auto;
    scrollbar-width: none;
    -ms-overflow-style: none;
    width: fit-content;
    max-width: 100%;
    padding: 0.5rem 0;
  }

  .pagination-container::-webkit-scrollbar {
    display: none;
  }

  .pagination-item {
    background: transparent;
    border: none;
    color: rgba(255, 255, 255, 0.3);
    font-size: clamp(0.7rem, 1vw, 0.85rem);
    font-weight: 600;
    letter-spacing: 0.1em;
    cursor: pointer;
    text-transform: uppercase;
    transition: all 0.3s ease;
    white-space: nowrap;
    position: relative;
    padding: 0.25rem 0;
  }

  .pagination-item::after {
    content: "";
    position: absolute;
    bottom: -2px;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 1.5px;
    background: #00ff88;
    transition: width 0.3s ease;
  }

  .pagination-item.is-active {
    color: #fff;
    transform: scale(1.05);
  }

  .pagination-item.is-active::after {
    width: 100%;
  }

  /* Desktop Middle */
  .menu-middle {
    flex: 1;
    display: flex;
    align-items: center;
    position: relative;
    z-index: 10;
    width: 100%;
    overflow: hidden;
    cursor: grab;
  }

  .menu-middle:active {
    cursor: grabbing;
  }

  .embla {
    overflow: hidden;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
  }

  .embla__container {
    display: flex;
    width: 100%;
    height: 100%;
    touch-action: pan-y pinch-zoom;
  }

  .embla__slide {
    flex: 0 0 100%;
    min-width: 0;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .horizontal-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: 100%;
    gap: 1rem;
    text-decoration: none;
    white-space: nowrap;
    opacity: 0;
    transform: translateY(30px);
    transition:
      opacity 0.5s ease,
      transform 0.5s ease;
    cursor: pointer;
    user-select: none;
  }

  .fullpage-menu.active .horizontal-link {
    opacity: 1;
    transform: translateY(0);
  }

  .link-number {
    font-size: clamp(1.2rem, 2.5vw, 2rem);
    color: rgba(255, 255, 255, 0.4);
    font-weight: 300;
  }

  .link-text {
    font-size: clamp(2.5rem, 8vw, 6.5rem);
    font-weight: 700;
    color: white;
    letter-spacing: 0.05em;
    position: relative;
  }

  .link-text::after {
    content: "";
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 0;
    height: 4px;
    background: linear-gradient(90deg, #00ff88, #00ccff);
    transition: width 0.5s cubic-bezier(0.77, 0, 0.175, 1);
  }

  .horizontal-link:hover .link-text::after {
    width: 100%;
  }

  /* Desktop Bottom */
  .menu-bottom {
    padding: 2rem 3rem 3rem;
    position: relative;
    z-index: 10;
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.6s cubic-bezier(0.77, 0, 0.175, 1);
  }

  .fullpage-menu.active .menu-bottom {
    opacity: 1;
    transform: translateY(0);
    transition-delay: 0.6s;
  }

  .ideals-text {
    font-size: clamp(0.75rem, 1.2vw, 1rem);
    line-height: 1.8;
    color: rgba(255, 255, 255, 0.5);
    max-width: 100%;
    margin: 0;
    letter-spacing: 0.05em;
  }

  /* ========================================= */
  /* MOBILE STYLE (Refined) */
  /* ========================================= */
  .mobile-menu-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    /* Dark green color matching theme */
    background-color: #09090b;
    z-index: 55; /* Just below the navbar toggle which is z-100 */
    transform: translateY(-100%);
    transition: transform 0.6s cubic-bezier(0.83, 0, 0.17, 1);

    display: none; /* Hidden by default on desktop */
    flex-direction: column;
    justify-content: center;
    align-items: flex-end; /* Right align */
    padding-right: 2rem;
  }

  @media (max-width: 768px) {
    .mobile-menu-overlay {
      display: flex;
    }
  }

  .mobile-menu-overlay.active {
    transform: translateY(0);
  }

  .mobile-content-container {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    text-align: right;
  }

  .mobile-link {
    color: #fff;
    font-size: 2.5rem; /* Large text */
    font-family:
      "Inter", sans-serif; /* Keep consistent font if possible, or utility class */
    font-weight: 500;
    text-decoration: none;
    opacity: 0;
    transform: translateY(20px);
    transition:
      opacity 0.5s ease,
      transform 0.5s cubic-bezier(0.215, 0.61, 0.355, 1);
    transition-delay: var(--delay, 0ms);
  }

  .mobile-link:hover {
    color: rgba(255, 255, 255, 0.8);
  }

  /* On active, animate links in */
  .mobile-menu-overlay.active .mobile-link {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<script>
  import EmblaCarousel from "embla-carousel";
  import { toggleScrollLock } from "@/lib/utils";

  function initNavbar() {
    const menuToggle = document.getElementById("menu-toggle");
    const menuIcon = document.getElementById("menu-icon");
    const closeIcon = document.getElementById("close-icon");

    // Select BOTH menus
    const desktopMenu = document.getElementById("desktop-menu");
    const mobileMenu = document.getElementById("mobile-menu");

    const emblaNode = document.getElementById("embla-node");
    const paginationList = document.getElementById("pagination-list");

    if (!menuToggle || !menuIcon || !closeIcon) return;

    // --- Embla Setup (Only runs if elements exist) ---
    let emblaApi: any;
    if (emblaNode && paginationList) {
      emblaApi = EmblaCarousel(emblaNode as HTMLElement, {
        loop: true,
        align: "center",
        dragFree: false,
      });

      const paginationItems =
        paginationList.querySelectorAll(".pagination-item");

      const updateActivePagination = () => {
        if (!emblaApi) return;
        const selectedIndex = emblaApi.selectedScrollSnap();
        paginationItems.forEach((item, index) => {
          if (index === selectedIndex) {
            item.classList.add("is-active");
            item.scrollIntoView({
              behavior: "smooth",
              block: "nearest",
              inline: "center",
            });
          } else {
            item.classList.remove("is-active");
          }
        });
      };

      emblaApi.on("select", updateActivePagination);
      emblaApi.on("reInit", updateActivePagination);
      updateActivePagination();

      paginationItems.forEach((btn) => {
        btn.addEventListener("click", () => {
          const indexAttr = btn.getAttribute("data-index");
          const index = parseInt(indexAttr || "0");
          emblaApi?.scrollTo(index);
        });
      });

      // Link click closure
      const horizontalLinks = emblaNode.querySelectorAll(".horizontal-link");
      horizontalLinks.forEach((link: any) => {
        link.addEventListener("click", () => {
          // Check if click is valid (not dragging)
          if (emblaApi.clickAllowed()) {
            closeMenu();
          }
        });
      });
    }

    // 3. Current Route Selection Logic (Preserved)
    const findIndexByPath = () => {
      // Safety: if emblaNode doesn't exist (e.g. strict mobile if we unmounted it, but we use display:none so it exists),
      // but let's check
      if (!emblaNode) return 0;

      const currentPath = window.location.pathname;
      const slides = emblaNode.querySelectorAll(".horizontal-link");
      let targetIndex = 0;

      slides.forEach((slide, index) => {
        const path = (slide as HTMLElement).getAttribute("data-path");
        if (path && currentPath === path) {
          targetIndex = index;
        } else if (path && path !== "/" && currentPath.startsWith(path)) {
          // Secondary check for sub-routes if needed, prioritize exact match
          targetIndex = index;
        }
      });
      return targetIndex;
    };

    // --- Menu Toggle Logic ---
    let isMenuOpen = false;

    function openMenu() {
      isMenuOpen = true;
      // Activate both - CSS media queries hide the irrelevant one
      desktopMenu?.classList.add("active");
      mobileMenu?.classList.add("active");

      menuIcon?.classList.add("hidden");
      closeIcon?.classList.remove("hidden");
      toggleScrollLock(true);

      // Re-init desktop if visible/exists and scroll to current page
      if (emblaApi) {
        emblaApi.reInit();
        // On open, scroll to the current page's index
        const initialIndex = findIndexByPath();
        emblaApi.scrollTo(initialIndex, true); // true = jump
      }
    }

    function closeMenu() {
      isMenuOpen = false;
      desktopMenu?.classList.remove("active");
      mobileMenu?.classList.remove("active");

      menuIcon?.classList.remove("hidden");
      closeIcon?.classList.add("hidden");
      toggleScrollLock(false);
    }

    menuToggle.onclick = () => {
      isMenuOpen ? closeMenu() : openMenu();
    };

    // Mobile specific link closure
    const mobileLinks = mobileMenu?.querySelectorAll(".mobile-link");
    mobileLinks?.forEach((link) => {
      link.addEventListener("click", () => {
        // Delay slightly for visual feedback if needed, currently immediate
        closeMenu();
      });
    });

    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape" && isMenuOpen) closeMenu();
    });
  }

  // Init on load + transition
  initNavbar();
  document.addEventListener("astro:page-load", () => {
    initNavbar();
    toggleScrollLock(false);
  });
</script>
